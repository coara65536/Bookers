<h1>Books</h1>
  <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
  <% end %> 
  <% if @book.errors.any? %>
    <h3>error</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
 
    <table>
		<thead>
			<tr>
				<th><P>title</P></th>
				<th><P>body</P></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
		    	<tr>
			    	<td><span><%= book.title %></span></td>
			    	<td><span><%= book.body %></span></td>
			    	<td><span><%= link_to "show", "/books/#{book.id}"%></span></td>
			    	<td><span><%= link_to "edit", edit_book_path(book) %></span></td>
			    	<td><span><%= link_to "destroy", book_path(book), method: :delete,"data-confirm" =>"Are you sureï¼Ÿ" %></span></td>
	            </tr>
			<% end %>

		</tbody>
	</table> 
	
	<h1>New book</h1>
<%= form_for(@book) do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_field :body%>
  <br>
  <%= f.submit 'Create Book'%>
<% end %>